#include "xfSDxMerge.h"  
 
void xF_merge(std::vector<cv::Mat> &src, cv::Mat &dst)
{ 
	const int srcTypeTP = ${srcTypeCMakeParam}; 	
	const int dstTypeTP = ${dstTypeCMakeParam};
	const int maxWidthTP = ${maxWidthCMakeParam};
	const int maxHeightTP = ${maxHeightCMakeParam};	
	const int NPCTP = ${NPCCMakeParam};
	
	//check for limitations of xfOpenCV module
	assert(src[0].channels() == 1);
	assert(src[1].channels() == 1);
	assert(src[2].channels() == 1);
	assert(src[3].channels() == 1);
	assert(dst.channels() == 4); 
	
	xf::Mat<XF_8UC1, maxHeightTP, maxWidthTP, NPCTP>* imgInput[4];		
	xf::Mat<XF_8UC4, maxHeightTP, maxWidthTP, NPCTP>* imgOutput;
	
	// perform some checks on the src type
	cvToXfSource(src[0], imgInput[0]);	
	cvToXfSource(src[1], imgInput[1]);	
	cvToXfSource(src[2], imgInput[2]);	
	cvToXfSource(src[3], imgInput[3]);
          
	// perform some checks on the dst type
	bool dstPostConversion = cvToXfDestination(dst, imgOutput, src[0]); 
	 
	// call xf::merge 
	xf::merge<${srcTypeCMakeParam},${dstTypeCMakeParam}, ${maxHeightCMakeParam},${maxWidthCMakeParam},${NPCCMakeParam}>(*imgInput[0], *imgInput[1], *imgInput[2], *imgInput[3], *imgOutput);
	
	//perform checks on the dst type
	if (dstPostConversion) {
		xfMatDepthPostConversion(dst,imgOutput);
	}
	
	delete imgInput[0];	
	delete imgInput[1];	
	delete imgInput[2];	
	delete imgInput[3];
	delete imgOutput;
	
	return;
}

